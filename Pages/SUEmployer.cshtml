@page
@model Afrolance.Pages.SUEmployerModel
@{
    ViewData["Title"] = "Sign Up as an Employer";
}

<h1>Sign Up</h1>

<form method="post">


    <div class="form-group">
        <label asp-for="sue.Employer_Name"></label>
        <input asp-for="sue.Employer_Name" type="text" class="form-control" placeholder="Employer Representative Name" />
        <span asp-validation-for="sue.Employer_Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Employer_Email"></label>
        <input asp-for="sue.Employer_Email" type="text" class="form-control" placeholder="Email" />
        <span asp-validation-for="sue.Employer_Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Employer_PW"></label>
        <input asp-for="sue.Employer_PW" type="password" class="form-control" placeholder="Password" />
        <span asp-validation-for="sue.Employer_PW" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Employer_Field">Category</label>
        <select asp-for="sue.Employer_Field" class="form-control">
            <option value="IT">IT</option>
            <option value="Marketing">Marketing</option>
            <option value="Design">Design</option>
            <option value="Business">Business</option>
            <option value="Communication">Communication</option>
            <option value="Medical">Medical</option>
            <option value="Electrical">Electrical</option>
            <option value="Architecture">Architecture</option>
            <option value="Languages">Languages</option>
            <option value="Driving">Driving</option>
            <option value="Teaching">Teaching</option>
            <option value="Music">Music</option>
            <option value="Cosmetic">Cosmetic</option>
            <option value="Photography">Photography</option>
            <option value="Desk">Desk</option>
            <option value="Security">Security</option>
        </select>
        <span asp-validation-for="sue.Employer_Field" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="sue.Employer_Description"></label>
        <textarea asp-for="sue.Employer_Description" type="text" class="form-control" placeholder="Employer / Company description"></textarea>
        <span asp-validation-for="sue.Employer_Description" class="text-danger"></span>
    </div>

    <button type="submit">Submit</button>


</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

@{
    if (Model.sue is null == false)
    {
        <h1>Results</h1>
        <p>@Model.sue.Employer_Name</p>
        <p>@Model.sue.Feedback</p>
    }
}