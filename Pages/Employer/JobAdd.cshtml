@page
@model Afrolance.Pages.Admin.JobAddModel
@{
}

<h1>Add a Job</h1>

<form method="post">


    <div class="form-group">
        <label asp-for="job.Job_Title"></label>
        <input asp-for="job.Job_Title" type="text" class="form-control" placeholder="Job Title" />
        <span asp-validation-for="job.Job_Title" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="job.Job_Desc"></label>
        <input asp-for="job.Job_Desc" type="text" class="form-control" placeholder="Job Description" />
        <span asp-validation-for="job.Job_Desc" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="job.Category"></label>
        <input asp-for="job.Category" type="text" class="form-control" placeholder="Category" />
        <span asp-validation-for="job.Category" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="job.Employer_Notes"></label>
        <input asp-for="job.Employer_Notes" type="text" class="form-control" placeholder="Employer Notes" />
        <span asp-validation-for="job.Employer_Notes" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="job.Pay"></label>
        <input asp-for="job.Pay" type="text" class="form-control" placeholder="Pay" />
        <span asp-validation-for="job.Pay" class="text-danger"></span>
    </div>

    <button type="submit">Submit</button>


</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

@{
    if (Model.job is null == false)
    {
        <h1>Results</h1>
        <p>@Model.job.Job_Title</p>
        <p>@Model.job.Feedback</p>
    }
}