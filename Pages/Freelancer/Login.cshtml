@page
@model Afrolance.Pages.Freelancer.LoginModel
@{
}

<h1>Login Page</h1>

<form method="post">


    <div class="form-group">
        <label asp-for="tFreelancer.Freelancer_Email">Freelancer Email</label>
        <input asp-for="tFreelancer.Freelancer_Email" type="text" class="form-control" placeholder="Username" />
        <span asp-validation-for="tFreelancer.Freelancer_Email" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="tFreelancer.Freelancer_PW"></label>
        <input asp-for="tFreelancer.Freelancer_PW" type="password" class="form-control" placeholder="Password" />
        <span asp-validation-for="tFreelancer.Freelancer_PW" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>

</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>


@{
    if (Model.tFreelancer != null && Model.tFreelancer.Feedback != null)
    {
        <h1>Results</h1>
        <p>@Model.tFreelancer.Feedback</p>
    }
}