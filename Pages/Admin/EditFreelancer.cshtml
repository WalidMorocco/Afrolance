@page
@model Afrolance.Pages.Admin.EditFreelancerModel
@{
}

<h1>Edit Freelancer</h1>

<form method="post">

    @** REGULAR HTML USING BINDING TO CLASS PROPERTIES **@

    <div class="form-group">
        <label asp-for="sue.Freelancer_FName"></label>
        <input asp-for="sue.Freelancer_FName" type="text" class="form-control" placeholder="Name of the Freelancer / company" />
        <span asp-validation-for="sue.Freelancer_FName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_LName"></label>
        <input asp-for="sue.Freelancer_LName" type="text" class="form-control" placeholder="Name of the Freelancer / company" />
        <span asp-validation-for="sue.Freelancer_LName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_Email"></label>
        <input asp-for="sue.Freelancer_Email" type="text" class="form-control" placeholder="Email" />
        <span asp-validation-for="sue.Freelancer_Email" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_PW"></label>
        <input asp-for="sue.Freelancer_PW" type="text" class="form-control" placeholder="Password" />
        <span asp-validation-for="sue.Freelancer_PW" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_Field"></label>
        <input asp-for="sue.Freelancer_Field" type="text" class="form-control" placeholder="Field of work" />
        <span asp-validation-for="sue.Freelancer_Field" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_Bio"></label>
        <input asp-for="sue.Freelancer_Bio" type="text" class="form-control" placeholder="Freelancer / Company description" />
        <span asp-validation-for="sue.Freelancer_Bio" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_Resume"></label>
        <input asp-for="sue.Freelancer_Resume" type="text" class="form-control" placeholder="Freelancer / Company description" />
        <span asp-validation-for="sue.Freelancer_Resume" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_Phone"></label>
        <input asp-for="sue.Freelancer_Phone" type="text" class="form-control" placeholder="Freelancer / Company description" />
        <span asp-validation-for="sue.Freelancer_Phone" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_Country"></label>
        <input asp-for="sue.Freelancer_Country" type="text" class="form-control" placeholder="Freelancer / Company description" />
        <span asp-validation-for="sue.Freelancer_Country" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_City"></label>
        <input asp-for="sue.Freelancer_City" type="text" class="form-control" placeholder="Freelancer / Company description" />
        <span asp-validation-for="sue.Freelancer_City" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="sue.Freelancer_Status"></label>
        <select asp-for="sue.Freelancer_Status" class="form-control">
            <option value="">--- Select Activity Level ---</option>
            <option value="false">Closed</option>
            <option value="true">Active</option>
        </select>
        <span asp-validation-for="sue.Freelancer_Status" class="text-danger"></span>
    </div>
    <input asp-for="sue.Freelancer_ID" type="hidden" class="form-control" />
    <button type="submit" class="btn btn-primary">Update</button>

</form>

<script src="/lib/jquery/dist/jquery.min.js"></script>
<script src="/lib/jquery-validation/dist/jquery.validate.min.js"></script>
<script src="/lib/jquery-validation-unobtrusive/dist/jquery.validate.unobtrusive.min.js"></script>

@{
    if (Model.sue is null == false && Model.sue.Feedback != null)
    {
        <h1>Results</h1>
        <p>@Model.sue.Feedback</p>
    }
}